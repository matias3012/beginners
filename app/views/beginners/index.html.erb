<p id="notice"><%= notice %></p>

<h1>Beginners</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Element</th>
      <th>Author</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beginners.each do |beginner| %>
      <tr>
        <td><%= beginner.title %></td>
        <td><%= beginner.element %></td>
        <td><%= beginner.author %></td>
        <td><%= beginner.user.email  %></td>
        <td><%= link_to 'Show', beginner %></td>
        <% if beginner.user == current_user %>
        <td><%= link_to 'Edit', edit_beginner_path(beginner) %></td>
        <td><%= link_to 'Destroy', beginner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

